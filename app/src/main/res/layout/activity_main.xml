<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5pt"
        android:gravity="center"
        android:onClick="buClick"
        tools:context=".MainActivity">

    <TableLayout
            android:id="@+id/tableLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.59000003">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

            <Button
                    android:id="@+id/Bu1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:onClick="buClick" />

            <Button
                    android:id="@+id/Bu2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:onClick="buClick" />

            <Button
                    android:id="@+id/Bu3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:onClick="buClick" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

            <Button
                    android:id="@+id/Bu4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:onClick="buClick" />

            <Button
                    android:id="@+id/Bu5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:onClick="buClick" />

            <Button
                    android:id="@+id/Bu6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:onClick="buClick" />
        </TableRow>

        <TableRow
                android:id="@+id/tableRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

            <Button
                    android:id="@+id/Bu7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:onClick="buClick" />

            <Button
                    android:id="@+id/Bu8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@android:color/darker_gray"
                    android:onClick="buClick" />

            <Button
                    android:id="@+id/Bu9"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@android:color/darker_gray"
                    android:onClick="buClick" />
        </TableRow>
    </TableLayout>

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            android:textSize="42sp"
            app:layout_constraintBottom_toBottomOf="@+id/tableLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/buJogadores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            android:text="2 Jogadores"
            app:layout_constraintBottom_toBottomOf="@+id/buReiniciarPlacar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/buReiniciarPlacar" />

    <ImageView
            android:id="@+id/ivBotaoBe"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/quadrado_do_bernardo" />

    <ImageView
            android:id="@+id/ivBotaoPai"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/ivBotaoBe"
            app:layout_constraintTop_toTopOf="@+id/ivBotaoBe"
            app:srcCompat="@drawable/quadrado_do_pai" />

    <TextView
            android:id="@+id/tvBotaoBe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/ivBotaoBe"
            app:layout_constraintTop_toBottomOf="@+id/ivBotaoBe" />

    <TextView
            android:id="@+id/tvBotaoPai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/ivBotaoPai"
            app:layout_constraintTop_toBottomOf="@+id/ivBotaoPai" />

    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivBotaoPai"
            app:srcCompat="@drawable/foto_jogo_bernardo" />

    <TextView
            android:id="@+id/tvfotoBe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
            android:id="@+id/buReiniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="Novo Jogo"
            app:layout_constraintEnd_toStartOf="@+id/buReiniciarPlacar"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/buReiniciarPlacar" />

    <TextView
            android:id="@+id/tvPlacarPlayer01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintStart_toStartOf="@id/tvBotaoBe"
            app:layout_constraintTop_toBottomOf="@id/tvBotaoBe" />

    <TextView
            android:id="@+id/tvPlacarPlayer02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintStart_toStartOf="@id/tvBotaoPai"
            app:layout_constraintTop_toBottomOf="@id/tvBotaoPai" />

    <Button
            android:id="@+id/buReiniciarPlacar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="Reiniciar Placar"
            app:layout_constraintEnd_toStartOf="@+id/buJogadores"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/buReiniciar"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout2" />

</android.support.constraint.ConstraintLayout>